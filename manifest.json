{
  "name": "Hoard",
  "description": "Manage your tabs!",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/acorn_silver.png",
      "32": "/images/acorn_silver.png",
      "48": "/images/acorn_silver.png",
      "128": "/images/acorn_silver.png"
    }
  },
  "icons": {
    "16": "/images/acorn_silver.png",
    "32": "/images/acorn_silver.png",
    "48": "/images/acorn_silver.png",
    "128": "/images/acorn_silver.png"
  }
}